
.sg-editing-window {

	pointer-events: 	all;
	position: 			fixed;
	border:				none;
	z-index: 			400;

}

.sg-editing-window-titlebar {

	cursor: 			move;

	position: 			absolute;
	z-index: 			430;

	top: 				0px;
	height: 			20px;

	left: 				0px;
	width:				100%;

	background-color: 	rgb(255, 41, 61);

}

.sg-editing-window-resizehandle {

	position: 			absolute;
	z-index: 			420;
	cursor: 			nwse-resize;

	bottom: 			0px;
	right: 				0px;

	width:				30px;
	height: 			30px;

	background-color: 	rgb(255, 41, 61);

}

.sg-editing-window-closebutton {

	position: 			absolute;
	z-index: 			440;

	top: 				0px;
	right: 				0px;

	width:				30px;
	height: 			30px;

	background-color: 	rgb(255, 41, 61);

}

.sg-editing-window-content {

	position: 			absolute;
	z-index: 			410;

	top:				0px;
	left:				0px;
	width:				100%;
	height:				100%;

	background-color:   white;

}